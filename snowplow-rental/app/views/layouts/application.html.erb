<!DOCTYPE html>
<html>
  <head>
    <title>SnowplowRental</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script>
      ;(function(p,l,o,w,i,n,g){if(!p[i]){p.GlobalSnowplowNamespace=p.GlobalSnowplowNamespace||[]; p.GlobalSnowplowNamespace.push(i);p[i]=function(){(p[i].q=p[i].q||[]).push(arguments) };p[i].q=p[i].q||[];n=l.createElement(o);g=l.getElementsByTagName(o)[0];n.async=1; n.src=w;g.parentNode.insertBefore(n,g)}}(window,document,"script","/javascripts/sp.js","snowplow"));

      window.snowplow('newTracker', 'jstracker', '0.0.0.0:9090', {
          encodeBase64: false,
          appId: 'snowplow-rental',
          platform: "web",
          discoverRootDomain: true,
          eventMethod: "beacon",
          contexts : {
              webPage: true
          }
      });

      window.snowplow('setUserId', 'tester');
      window.snowplow('enableActivityTracking', {
        minimumVisitLength: 30,
        heartbeatDelay: 10
      });

      var config = {
          forms: {
              blacklist: []
          },
          fields: {
              blacklist: []
          }
      };

      window.snowplow('enableFormTracking', config);
      window.snowplow('trackPageView');
    </script
  </head>

  <body>
    <%= yield %>
  </body>
</html>
