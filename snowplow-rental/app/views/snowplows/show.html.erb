<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@snowplow.image_path, width: '600') %>
</p>

<h1>
  <%= @snowplow.name %>
</h1>

<p>
  <%= @snowplow.description %>
</p>

<%= link_to 'Back to all snowplows', snowplows_path %>

<h2>Reservations</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Since</th>
      <th>Until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snowplow.future_reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.first_name %> <%= reservation.last_name %></td>
        <td><%= reservation.since %></td>
        <td><%= reservation.until %></td>
        <td><%= link_to 'Show', snowplow_reservation_path(@snowplow, reservation) %></td>
        <td><%= link_to 'Edit', edit_snowplow_reservation_path(@snowplow, reservation) %></td>
        <td><%= link_to 'Destroy', snowplow_reservation_path(@snowplow, reservation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_snowplow_reservation_path(@snowplow) %>
